  "options": [
    {
      "names": [
        "-t"
      ],
      "argument": "",
      "description": "Equivalent to -F'\\t' -v OFS=\"\\t\""
    },
    {
      "names": [
        "-c"
      ],
      "argument": "arg",
      "description": "Specify input format (hdr|header|sam|vcf|bed|gff|fastx)"
    },
    {
      "names": [
        "-f"
      ],
      "argument": "progfile",
      "description": "Program file as input."
    },
    {
      "names": [
        "-v"
      ],
      "argument": "var=value",
