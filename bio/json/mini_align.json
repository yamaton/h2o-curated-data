{"name":"mini_align","description":"mini_align","options":[{"names":["-h"],"argument":"","description":"show this help text."},{"names":["-r"],"argument":"<reference>","description":"reference, should be a fasta file. If correspondng minimap indices do not exist they will be created. (required)."},{"names":["-i"],"argument":"<fastq>","description":"fastq/a input reads (required)."},{"names":["-I"],"argument":"","description":"split index every ~NUM input bases (default: 16G, this is larger than the usual minimap2 default)."},{"names":["-f"],"argument":"","description":"force recreation of index file."},{"names":["-a"],"argument":"","description":"aggressively extend gaps (sets -A1 -B2 -O2 -E1 for minimap2)."},{"names":["-P"],"argument":"","description":"filter to only primary alignments (i.e. run samtools view -F 2308). Deprecated: this filter is now default and can be disabled with -A."},{"names":["-A"],"argument":"","description":"do not filter alignments to primary alignments, output all."},{"names":["-n"],"argument":"","description":"sort bam by read name."},{"names":["-c"],"argument":"","description":"chunk size. Input reads/contigs will be broken into chunks prior to alignment."},{"names":["-t"],"argument":"<int>","description":"alignment threads (default: 1)."},{"names":["-p"],"argument":"<str>","description":"output file prefix (default: reads)."},{"names":["-m"],"argument":"","description":"fill MD tag."},{"names":["-s"],"argument":"","description":"fill cs(=long) tag."},{"names":["-X"],"argument":"","description":"only create reference index files."},{"names":["-x"],"argument":"","description":"log all commands before running."},{"names":["-M"],"argument":"","description":"match score"},{"names":["-S"],"argument":"","description":"mismatch score"},{"names":["-O"],"argument":"","description":"open gat penalty"},{"names":["-E"],"argument":"","description":"extend gap penalty."}]}
