#compdef _hypo hypo

# Generated with h2o 0.1.18


function _hypo {
    local line state

    function _commands {
        local -a commands
        commands=(
        )
        _describe 'command' commands
    }
 

    _arguments -C \
        '(-r --reads-short)'{-r,--reads-short}'[Input file name containing reads (in fasta/fastq format; can be compressed). A list of files containing file names in each line can be passed with @ prefix.]' \
        '(-d --draft)'{-d,--draft}'[Input file name containing the draft contigs (in fasta/fastq format; can be compressed).]' \
        '(-b --bam-sr)'{-b,--bam-sr}'[Input file name containing the alignments of short reads against the draft (in bam/sam format; must have CIGAR information).]' \
        '(-c --coverage-short)'{-c,--coverage-short}'[Approximate mean coverage of the short reads.]' \
        '(-s --size-ref)'{-s,--size-ref}'[Approximate size of the genome (a number; could be followed by units k/m/g; e.g. 10m, 2.3g).]' \
        '(-B --bam-lr)'{-B,--bam-lr}'[Input file name containing the alignments of long reads against the draft (in bam/sam format; must have CIGAR information). \[Only Short reads polishing will be performed if this argument is not given\]]' \
        '(-o --output)'{-o,--output}'[Output file name. \[Default\] hypo_<draft_file_name>.fasta in the working directory.]' \
        '(-t --threads)'{-t,--threads}'[Number of threads. \[Default\] 1.]' \
        '(-p --processing-size)'{-p,--processing-size}'[Number of contigs to be processed in one batch. Lower value means less memory usage but slower speed. \[Default\] All the contigs in the draft.]' \
        '(-k --kind-sr)'{-k,--kind-sr}'[Kind of the short reads. \[Valid Values\]]' \
        '(-m --match-sr)'{-m,--match-sr}'[Score for matching bases for short reads. \[Default\] 5.]' \
        '(-x --mismatch-sr)'{-x,--mismatch-sr}'[Score for mismatching bases for short reads. \[Default\] -4.]' \
        '(-g --gap-sr)'{-g,--gap-sr}'[Gap penalty for short reads (must be negative). \[Default\] -8.]' \
        '(-M --match-lr)'{-M,--match-lr}'[Score for matching bases for long reads. \[Default\] 3.]' \
        '(-X --mismatch-lr)'{-X,--mismatch-lr}'[Score for mismatching bases for long reads. \[Default\] -5.]' \
        '(-G --gap-lr)'{-G,--gap-lr}'[Gap penalty for long reads (must be negative). \[Default\] -4.]' \
        '(-n --ned-th)'{-n,--ned-th}'[Threshold for Normalised Edit Distance of long arms allowed in a window (in %). Higher number means more arms allowed which may slow down the execution. \[Default\] 20.]' \
        '(-q --qual-map-th)'{-q,--qual-map-th}'[Threshold for mapping quality of reads. The reads with mapping quality below this threshold will not be taken into consideration. \[Default\] 2.]' \
        '(-i --intermed)'{-i,--intermed}'[Store or use (if already exist) the intermediate files. \[Currently, only Solid kmers are stored as an intermediate file.\].]' \
        '(-h --help)'{-h,--help}'[Print the usage.]' \
        '1: :_commands' \
        '*: :_files'

    case $state in
    (cmd)
        _commands
        ;;
    (subcmd)
        case $line[1] in
        esac
        ;;
     esac

}

