{"name":"emacs","description":"GNU project Emacs editor","usage":"emacs [OPTION-OR-FILENAME]...","options":[{"names":["--batch"],"argument":"","description":"do not do interactive display; implies -q"},{"names":["--chdir"],"argument":"DIR","description":"change to directory DIR"},{"names":["--daemon","--bg-daemon"],"argument":"[=NAME]","description":"start a (named) server in the background"},{"names":["--fg-daemon"],"argument":"[=NAME]","description":"start a (named) server in the foreground"},{"names":["--debug-init"],"argument":"","description":"enable Emacs Lisp debugger for init file"},{"names":["--display","-d"],"argument":"DISPLAY","description":"use X server DISPLAY"},{"names":["--module-assertions"],"argument":"","description":"assert behavior of dynamic modules"},{"names":["--dump-file"],"argument":"FILE","description":"read dumped state from FILE"},{"names":["--no-build-details"],"argument":"","description":"do not add build details such as time stamps"},{"names":["--no-desktop"],"argument":"","description":"do not load a saved desktop"},{"names":["--no-init-file","-q"],"argument":"","description":"load neither ~/.emacs nor default.el"},{"names":["--no-loadup","-nl"],"argument":"","description":"do not load loadup.el into bare Emacs"},{"names":["--no-site-file"],"argument":"","description":"do not load site-start.el"},{"names":["--no-x-resources"],"argument":"","description":"do not load X resources"},{"names":["--no-site-lisp","-nsl"],"argument":"","description":"do not add site-lisp directories to load-path"},{"names":["--no-splash"],"argument":"","description":"do not display a splash screen on startup"},{"names":["--no-window-system","-nw"],"argument":"","description":"do not communicate with X, ignoring $DISPLAY"},{"names":["--quick","-Q"],"argument":"","description":"equivalent to: -q --no-site-file --no-site-lisp --no-splash --no-x-resources"},{"names":["--script"],"argument":"FILE","description":"run FILE as an Emacs Lisp script"},{"names":["--ter