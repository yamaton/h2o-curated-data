{"name":"pg_basebackup","description":"pg_basebackup takes a base backup of a running PostgreSQL server.","usage":"pg_basebackup [OPTION]...","options":[{"names":["-D","--pgdata"],"argument":"DIRECTORY","description":"receive base backup into directory"},{"names":["-F","--format"],"argument":"p|t","description":"output format (plain (default), tar)"},{"names":["-r","--max-rate"],"argument":"RATE","description":"maximum transfer rate to transfer data directory (in kB/s, or use suffix \"k\" or \"M\")"},{"names":["-R","--write-recovery-conf"],"argument":"","description":"write configuration for replication"},{"names":["-t","--target"],"argument":"TARGET[:DETAIL]","description":"backup target (if other than client)"},{"names":["-T","--tablespace-mapping"],"argument":"OLDDIR=NEWDIR","description":"relocate tablespace in OLDDIR to NEWDIR"},{"names":["--waldir"],"argument":"WALDIR","description":"location for the write-ahead log directory"},{"names":["-X","--wal-method"],"argument":"none|fetch|stream","description":"include required WAL files with specified method"},{"names":["-z","--gzip"],"argument":"","description":"compress tar output"},{"names":["-Z","--compress"],"argument":"[{client|server}-]METHOD[:DETAIL]","description":"compress on client or server as specified"},{"names":["-Z","--compress"],"argument":"none","description":"do not compress tar output"},{"names":["-c","--checkpoint"],"argument":"fast|spread","description":"set fast or spread checkpointing"},{"names":["-C","--create-slot"],"argument":"","description":"create replication slot"},{"names":["-l","--label"],"argument":"LABEL","description":"set backup label"},{"names":["-n","--no-clean"],"argument":"","description":"do not clean up after errors"},{"names":["-N","--no-sync"],"argument":"","description":"do not wait for changes to be written safely to disk"},{"names":["-P","--progress"],"argument":"","description":"show progress information"},{"names":["-S","--slot"],"argument":"SLOTNAME","description":"r