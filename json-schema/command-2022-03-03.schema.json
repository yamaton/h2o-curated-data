{
    "$id": "https://raw.githubusercontent.com/yamaton/h2o-curated-data/main/json-schema/command-2022-03-03.schema.json",
    "title": "Structure of H2O command specification",
    "description": "Command specification in the H2O ecosystem.",
    "type": "object",
    "properties": {
        "name": {
            "description": "Name of the command",
            "type": "string"
        },
        "description": {
            "description": "Description of the command",
            "type": "string"
        },
        "options": {
            "description": "Options of the command",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                 	"names": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "argument": {
                        "type": "string",
                        "description": "Argument associated with the option"
                    },
                    "description": {
                        "type": "string",
                        "description": "Argument associated with the option"
                    }
                },
                "required": [ "names", "argument", "description" ]
            }
        },
        "subcommands": {
            "description": "Subcommands of the command",
            "type": "array",
            "items": {
                "$ref": "#"
            }
        },
        "inheritedOptions": {
            "description": "Options inherited by subcommands",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                 	"names": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "argument": {
                        "type": "string",
                        "description": "Argument associated with the option"
                    },
                    "description": {
                        "type": "string",
                        "description": "Argument associated with the option"
                    }
                },
                "required": [ "names", "argument", "description" ]
            }
        },
        "argument": {
            "description": "Positional arguments",
            "type": "string"
        },
        "aliases": {
            "description": "Aliases of command names",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "usage": {
            "description": "Usage of the command",
            "type": "string"
        },
        "version": {
            "description": "Version of the command",
            "type": "string"
        },
        "__isroot__": {
            "description": "Is this at the root of a command?",
            "type": "boolean"
        },
        "__meta__": {
            "description": "Meta information",
            "type": "object",
            "properties": {
                "tool": {
                    "description": "Name of the tool generating the specification",
                    "type": "string"
                },
                "date": {
                    "description": "Date the specification was generated.",
                    "type": "string"
                }
            }
        }
    },

    "required": [ "name", "description", "options" ]
}