#!/usr/bin/env bash
#
# Replace directory, such as `/home/vierbein` by `~`.
#
# Example:
#
#     $ ./fix-homedir docker
#

set -o errexit
set -o nounset
set -o pipefail
if [[ "${TRACE-0}" == "1" ]]; then
    set -o xtrace
fi

if [[ "${1-}" =~ ^-*h(elp)?$ ]]; then
    echo "Usage: ./fix-homedir <command-name>"
    exit
fi

basedir="$(dirname "$(readlink -f "$0")")"
name="$1"

function fix {
    dir="$1"
    yaml="$basedir/../$dir/yaml/$name.yaml"
    if [[ -f "$yaml" ]]; then
        echo "Replace $HOME with ~ in $yaml"
        sed -i "s|$HOME|~|g" "$yaml"
    fi
}

fix general
fix bio
fix experimental
